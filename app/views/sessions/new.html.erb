<% provide(:title, "Log in") %>
<div class="center">
  <h1>Welcome to NITK Library!</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-5">
    <img src="http://www.nitk.ac.in/sites/default/files/public/logo.png" class="center" style="height:150px">
  </div>
</div>  
<br/>
<br />
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      </br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      </br>

      <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
      </br>
    <% end %>
    </br>
    <div align="right">
      In case you don't have an account?
      <%= link_to 'Sign up', signup_path, class: "btn btn-primary", style: "color: #ffffff" %>
     </div>
  </div>
</div>

