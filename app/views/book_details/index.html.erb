<p id="notice"><%= notice %></p>

<h1>Book Details</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Book title</th>
      <th>Publication year</th>
      <th>Language</th>
      <th>Category type</th>
      <th>Binding</th>
      <th>No of copies stored</th>
      <th>No of copies present</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_details.each do |book_detail| %>
      <tr>
        <td><%= book_detail.id %></td>
        <td><%= book_detail.book_title %></td>
        <td><%= book_detail.publication_year %></td>
        <td><%= book_detail.language %></td>
        <td><%= book_detail.category_type %></td>
        <td><%= book_detail.binding_id %></td>
        <td><%= book_detail.no_of_copies_stored %></td>
        <td><%= book_detail.no_of_copies_present %></td>
        <td><%= link_to 'Show', book_detail %></td>
        <td><%= link_to 'Edit', edit_book_detail_path(book_detail) %></td>
        <td><%= link_to 'Destroy', book_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

